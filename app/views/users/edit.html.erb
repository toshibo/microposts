<h1>
  <%= gravatar_for @user %><%= @user.name %>さんのプロフィール
</h1>
<br />
<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
<div class="form-group">
    <label class="col-md-2">自己紹介</label>
    <div class="col-sm-10">
        <%= f.text_field :introduction, :size => 40, :class => "form-control" %>
    </div>
</div>
<div class="form-group">
    <label class="col-md-2">メールアドレス</label>
    <div class="col-sm-10">
        <%= f.text_field :email, :size => 40, :class => "form-control" %>
    </div>
</div>
<div class="form-group">
    <label class="col-md-2">地域</label>
    <div class="col-sm-10">
        <%= f.text_field :region, :size => 40, :class => "form-control" %>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'プロフィール更新', class: "btn btn-sm btn-primary" %>
    </div>
</div>
<% end %>